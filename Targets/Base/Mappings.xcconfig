// MARK: Versioning

PRODUCT_BUNDLE_VERSION_STRING = $(_BUILD_VERSION)
PRODUCT_BUNDLE_VERSION = $(_BUILD_NUMBER)

// MARK: Bundle

PRODUCT_NAME = $(_BUNDLE_NAME)
PRODUCT_BUNDLE_IDENTIFIER = $(_BUNDLE_IDENTIFIER)
INFOPLIST_FILE = $(_BUNDLE_INFOPLIST_PATH)
